<?xml version="1.0" encoding="UTF-8" ?>
@using config = System.Configuration.ConfigurationManager;
@{
    string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority;
    string theme = config.AppSettings["theme"];
    string name = config.AppSettings["name"];

    Response.ContentType = "application/opensearchdescription+xml";
}
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
    <ShortName>@name</ShortName>
    <Description>@name Search</Description>
    <InputEncoding>UTF-8</InputEncoding>
    <Image width="16" height="16" type="image/x-icon">@baseUrl/themes/@theme/favicon/favicon.ico</Image>
    <Url type="text/html" method="get" template="@baseUrl/search/{searchTerms}" />
    <Url type="application/opensearchdescription+xml" rel="self" template="@baseUrl/opensearch.xml" />
    <searchform>@baseUrl</searchform>
</OpenSearchDescription>